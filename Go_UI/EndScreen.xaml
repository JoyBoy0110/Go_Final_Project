<Window x:Class="Go_UI.EndScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Go_UI"
        mc:Ignorable="d"
        Icon="C:\Users\naorb\source\repos\goFinalProject\Go_UI\Assets\9Board.png"
        Title=""  Width="200"  Height="200" SizeToContent="WidthAndHeight"
        Background="Black"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate"
                         TargetType="Button">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}">
                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Background"
                            Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground"
                            Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </Window.Resources>
    <Viewbox>
        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="PaleGoldenrod"></SolidColorBrush>
            </Grid.Background>
            <TextBlock FontFamily="Algerian" x:Name="EndMessage" VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.Row="0" Grid.Column="0" FontSize="9" Text="black resigned" HorizontalAlignment="Center">
            </TextBlock>
            <TextBlock FontFamily="Algerian" x:Name="WinnerMessage" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Row="0" Grid.Column="0" FontSize="15" Text="the winner is white" HorizontalAlignment="Center">
            </TextBlock>
            <TextBlock FontFamily="Algerian" Background="Black" Foreground="White" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Text="Black" FontSize="10">
            </TextBlock>
            <TextBlock FontFamily="Algerian" x:Name="EndScore" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" FontSize="15" Text=" 0 - 0 " HorizontalAlignment="Center">
            </TextBlock>
            <TextBlock FontFamily="Algerian" Background="White" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Text="White" FontSize="10" >
            </TextBlock>
            <Button MouseLeave="PlayAgain_OnMouseLeave" MouseEnter="PlayAgain_OnMouseEnter" Template="{StaticResource NoMouseOverButtonTemplate}" FontFamily="Algerian" Background="Beige" Opacity="0.75"  Foreground="Goldenrod" Grid.Column="1" Grid.Row="2" Height="25" Width="50" Click="PlayAgain_Click"  Name="PlayAgain" Content="Play Again" FontSize="7" HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button MouseLeave="Exit_OnMouseLeave" MouseEnter="Exit_OnMouseEnter" Template="{StaticResource NoMouseOverButtonTemplate}" FontFamily="Algerian" Background="Beige" Opacity="0.75" Foreground="Goldenrod" Grid.Column="1" Grid.Row="3" Height="25" Width="50" Click="Exit_Click"  Name="Exit" Content="Exit" FontSize="10" HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Viewbox>
</Window>
