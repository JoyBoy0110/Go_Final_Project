<Window x:Class="Go_UI.EndScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Go_UI"
        mc:Ignorable="d"
        Title=""  Width="200"  Height="200" SizeToContent="WidthAndHeight"
        Background="Black"
        WindowStartupLocation="CenterScreen">
    <Viewbox>
        <Grid x:Name="grid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="PaleGoldenrod"></SolidColorBrush>
            </Grid.Background>
            <TextBlock VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Row="0" Grid.Column="0" FontSize="15" Text="the winner is white" HorizontalAlignment="Center">
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Text="Player1" FontSize="10">
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" FontSize="15" Text=" 0 - 0 " HorizontalAlignment="Center">
            </TextBlock>
            <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Text="Player2" FontSize="10" >
            </TextBlock>
            <Button Background="Beige" Opacity="0.75"  Foreground="Goldenrod" Grid.Column="1" Grid.Row="2" Height="25" Width="50" Click="Play_Click" Name="play" Content="Play Again" FontSize="10" HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Background="Beige" Opacity="0.75" Foreground="Goldenrod" Grid.Column="1" Grid.Row="3" Height="25" Width="50" Click="exit_Click"  Name="exit" Content="Exit" FontSize="10" HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Viewbox>
</Window>
